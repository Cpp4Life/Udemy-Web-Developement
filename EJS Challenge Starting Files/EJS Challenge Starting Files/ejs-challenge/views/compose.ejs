<%- include('partials/header') -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="composeTitle">Title</label>
            <input type="text" class="form-control" name="postTitle" id="composeTitle">
        </div>
        <div class="form-group">
            <label for="composeContent">Post</label>
            <textarea class="form-control" name="postBody" id="composeContent" rows="3"></textarea>
        </div>
        <button type="submit" name="" value="" class="btn btn-primary">Publish</button>
    </form>
    <%- include('partials/footer') -%>